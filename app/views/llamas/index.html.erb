<p id="notice"><%= notice %></p>

<h1>Listing Llamas</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @llamas.each do |llama| %>
      <tr>
        <td><%= llama.id %></td>
        <td><%= llama.name %></td>
        <td><%= llama.breed %></td>
        <td><%= llama.age %></td>
        <td><%= llama.owner %></td>
        <td><%= link_to 'Show', llama %></td>
        <td><%= link_to 'Edit', edit_llama_path(llama) %></td>
        <td><%= link_to 'Destroy', llama, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

